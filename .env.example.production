# Production Environment Configuration
# Copy this to .env and configure for your production server

APP_NAME="RISMENT"
APP_ENV=production
APP_KEY=  # Generate with: php artisan key:generate
APP_DEBUG=false  # CRITICAL: Must be false in production!
APP_URL=https://your-domain.com  # Your production URL with HTTPS

# Localization
APP_LOCALE=ru
APP_FALLBACK_LOCALE=ru
APP_FAKER_LOCALE=ru_RU

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_STACK=daily  # Use daily rotation in production
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error  # Only log errors in production

# Database - PRODUCTION (MySQL/PostgreSQL recommended)
DB_CONNECTION=mysql  # Change from sqlite to mysql/pgsql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=risment_production
DB_USERNAME=risment_user
DB_PASSWORD=  # STRONG PASSWORD REQUIRED

# Session - Use Redis in production for better performance
SESSION_DRIVER=redis  # Change from database to redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true  # Encrypt sessions
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com
SESSION_SECURE_COOKIE=true  # Require HTTPS
SESSION_SAME_SITE=lax

# Broadcasting
BROADCAST_CONNECTION=redis

# Filesystem
FILESYSTEM_DISK=public

# Queue - Use Redis for production
QUEUE_CONNECTION=redis  # Change from database to redis

# Cache - Use Redis for production
CACHE_STORE=redis  # Change from database to redis
CACHE_PREFIX=risment_

# Redis - REQUIRED for production performance
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=  # Set strong password if Redis is networked
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_QUEUE_DB=2

# Mail - Configure your SMTP server
MAIL_MAILER=smtp  # Change from log
MAIL_HOST=smtp.your-provider.com
MAIL_PORT=587
MAIL_USERNAME=your-smtp-username
MAIL_PASSWORD=  # SMTP password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@your-domain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (Optional - for file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Payment Gateways (Optional - for automatic payments)
# PAYME_MERCHANT_ID=
# PAYME_KEY=
# CLICK_MERCHANT_ID=
# CLICK_SERVICE_ID=
# CLICK_SECRET_KEY=

# Monitoring (Recommended)
# SENTRY_LARAVEL_DSN=  # For error tracking
# NEW_RELIC_KEY=  # For APM

# Vite
VITE_APP_NAME="${APP_NAME}"

# CRITICAL PRODUCTION CHECKLIST:
# [ ] Set APP_DEBUG=false
# [ ] Set APP_ENV=production
# [ ] Generate APP_KEY
# [ ] Configure MySQL/PostgreSQL database
# [ ] Set up Redis for cache/queue/sessions
# [ ] Configure SMTP for emails
# [ ] Set SESSION_SECURE_COOKIE=true
# [ ] Enable HTTPS/SSL on server
# [ ] Set strong passwords for DB and Redis
# [ ] Configure backup strategy
# [ ] Set up monitoring (Sentry recommended)
# [ ] Run: php artisan config:cache
# [ ] Run: php artisan route:cache
# [ ] Run: php artisan view:cache
# [ ] Set up supervisor for queue workers
# [ ] Configure cron for: * * * * * cd /path-to-your-project && php artisan schedule:run >> /dev/null 2>&1
